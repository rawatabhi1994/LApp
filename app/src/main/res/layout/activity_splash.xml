<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/appStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abhirawat.lapp.SplashActivity">

    <TextView
        android:id="@+id/tvSplashText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="@string/splash_text_1"
        android:textColor="@color/md_white"
        android:textSize="50sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvSplashText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSplashText1"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/margin_layout"
        android:text="@string/find_the_people_you_crossed_path_with"
        android:textColor="@color/md_white"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>
